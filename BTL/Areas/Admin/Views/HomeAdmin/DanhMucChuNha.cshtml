@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<ChuNha>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhMucChuNha";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Thông tin chủ nhà</h1>

<p>
    <a class="btn btn-primary" asp-action="ThemChuNhaMoi">Thêm mới</a>
</p>
<p>@TempData["Message"]</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr class="table-danger">
                <th>
                    @Html.DisplayNameFor(model => model[0].TenChuNha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].NgaySinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].SdtchuNha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].SdtchuNha2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].AnhChuNha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].MoTaChuNha)
                </th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                string @cls = "table-success";
            }
            @foreach (var item in Model)
            {
                i = i + 1;
                cls = "table-success";
                if (i % 2 == 0)
                {
                    cls = "table-primary";
                }
                <tr class="@cls">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenChuNha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SdtchuNha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SdtchuNha2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnhChuNha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTaChuNha)
                    </td>
                    <td>
                        <a asp-action="SuaChuNha" asp-route-maChuNha="@item.MaChuNha">Sửa</a> |
                        <a asp-action="XoaChuNha" asp-route-maChuNha="@item.MaChuNha">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="product__pagination">
        @Html.PagedListPager(Model, page=>Url.Action("DanhMucChuNha", new{page=page}))
    </div>
</div>
<style>
    .pagination li.active {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #b66dff;
        border-color: #b66dff;
        color: #ffffff;
        font-weight: bold;
    }

    .pagination li {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #ffffff;
        border-color: #ffffff;
        color: #000000;
        font-weight: bold;
    }
</style>
