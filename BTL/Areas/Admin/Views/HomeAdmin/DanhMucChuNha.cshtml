@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<ChuNha>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhMucChuNha";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>DanhMucChuNha</h1>

<p>
    <a asp-action="ThemChuNhaMoi">Thong Tin Chu Nha</a>
</p>
<p>@TempData["Message"]</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr class="table-warning">
                <th>
                    Tên Chủ Nhà
                </th>
                <th>
                    Địa Chỉ
                </th>
                <th>
                    Ngày Sinh
                </th>
                <th>
                    SĐT Chủ Nhà
                </th>
                <th>
                    SĐT Chủ Nhà 2
                </th>
                <th>
                    Email
                </th>
                <th>
                    Ảnh Chủ Nhà
                </th>
                <th>
                    Mô Tả Chủ Nhà
                </th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                string @cls = "table-success";
            }
            @foreach (var item in Model)
            {
                i = i + 1;
                cls = "table-success";
                if (i % 2 == 0)
                {
                    cls = "table-primary";
                }
                <tr class="@cls">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenChuNha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SdtchuNha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SdtchuNha2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnhChuNha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTaChuNha)
                    </td>
                    <td>
                        <a asp-action="SuaChuNha" asp-route-maChuNha="@item.MaChuNha">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.MaChuNha">Details</a> |
                        <a asp-action="XoaChuNha" asp-route-maChuNha="@item.MaChuNha">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.PagedListPager(Model,page => Url.Action("DanhMucChuNha", new{ page=page}), new
X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
    })
