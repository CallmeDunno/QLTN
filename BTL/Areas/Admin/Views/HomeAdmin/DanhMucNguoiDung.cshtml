@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<NguoiDung>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhMucNguoiDung";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thông tin người dùng</h1>

<p>
    <a class="btn btn-primary" asp-action="ThemNguoiDungMoi">Thêm mới</a>
</p>
<p>@TempData["Message"]</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr class="table-danger">
            <th>
                    @Html.DisplayNameFor(model => model[0].TenNguoiDung)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model[0].Sdt)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model[0].DiaChi)
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
            @{
                int i = 0;
                string @cls = "table-success";
            }
            @foreach (var item in Model)
            {
                i = i + 1;
                cls = "table-success";
                if (i % 2 == 0)
                {
                    cls = "table-primary";
                }
                <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                <a asp-action="SuaNguoiDung" asp-route-maNguoiDung="@item.MaNguoiDung">Sửa</a> |
                <a asp-action="XoaNguoiDung" asp-route-maNguoiDung="@item.MaNguoiDung">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
    <div class="product__pagination">
        @Html.PagedListPager(Model, page=>Url.Action("DanhMucNguoiDung", new{page=page}))
    </div>
</div>
<style>
    .pagination li.active {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #b66dff;
        border-color: #b66dff;
        color: #ffffff;
        font-weight: bold;
    }

    .pagination li {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #ffffff;
        border-color: #ffffff;
        color: #000000;
        font-weight: bold;
    }
</style>