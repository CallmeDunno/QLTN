@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<NguoiDung>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhMucNguoiDung";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhMucNguoiDung</h1>

<p>
    <a asp-action="ThemNguoiDungMoi">Create New</a>
</p>
<p>@TempData["Message"]</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Người Dùng
            </th>
            <th>
                Mật Khẩu
            </th>
            <th>
                Số ĐT
            </th>
            <th>
                Email
            </th>
            <th>
                Địa Chỉ
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Nghề Nghiệp
            </th>
            <th>
                Ảnh Người DÙng
            </th>
            <th>
                IS Deleted
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @{
                int i = 0;
                string @cls = "table-success";
            }
            @foreach (var item in Model)
            {
                i = i + 1;
                cls = "table-success";
                if (i % 2 == 0)
                {
                    cls = "table-primary";
                }
                <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgheNghiep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-action="SuaNguoiDung" asp-route-maNguoiDung="@item.MaNguoiDung">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaNguoiDung">Details</a> |
                <a asp-action="XoaNguoiDung" asp-route-maNguoiDung="@item.MaNguoiDung">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
@Html.PagedListPager(Model,page => Url.Action("DanhMucNguoiDung", new{ page=page}), new
X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
    })