@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<MucDichSuDung>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ThongTinMDSD";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách mục đích sử dụng</h1>
<p>@TempData["Message"]</p>
<p>
    <a class="btn btn-primary" asp-action="ThemMDSD">Thêm mới</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr class="table-danger">
                <th>
                    @Html.DisplayNameFor(model => model[0].TenMdsd)
                </th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
                i = i + 1;
                string cls = "table-info";
                if (i % 2 == 0)
                {
                    cls = "table-success";
                }
                <tr class="@cls">
                    <td>
                        @Html.DisplayFor(modelItem => item.TenMdsd)
                    </td>
                    <td>
                        <a asp-action="SuaMDSD" asp-route-id="@item.MaMdsd">Sửa</a> |
                        <a asp-action="XoaMDSD" asp-route-id="@item.MaMdsd">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="product__pagination">
        @Html.PagedListPager(Model, page=>Url.Action("ThongTinNha", new{page=page}))
    </div>
</div>
<style>
    .pagination li.active {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #b66dff;
        border-color: #b66dff;
        color: #ffffff;
        font-weight: bold;
    }

    .pagination li {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #ffffff;
        border-color: #ffffff;
        color: #000000;
        font-weight: bold;
    }
</style>
