@model BTL.Models.NhaDichVu
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ThemNhaDichVu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm Nhà - Dịch vụ</h1>

<h4>Nhà Dịch Vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemNhaDichVu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaNha" class="control-label"></label>
                <select asp-for="MaNha" class ="form-control" asp-items="ViewBag.MaNha"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaDichVu" class="control-label"></label>
                <select asp-for="MaDichVu" class ="form-control" asp-items="ViewBag.MaDichVu"></select>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NhaDichVu">Quay lại</a>
</div>

