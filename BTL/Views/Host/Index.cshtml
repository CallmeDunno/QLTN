@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<ChuNha>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHost.cshtml";
}
<section class="agents-grid grid">
    <!-- =======Intro Single ======= -->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Thông tin chủ nhà</h1>
                        <span class="color-text-a">Danh sách các chủ nhà</span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-4">
                    <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Chủ nhà
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section><!-- End Intro Single-->
    <!-- ======= Agents Grid ======= -->
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card-box-d">
                        <div class="card-img-d">
                            <img src="../Images/chu/@item.AnhChuNha" alt="" class="img-d img-fluid">
                        </div>
                        <div class="card-overlay card-overlay-hover">
                            <div class="card-header-d">
                                <div class="card-title-d align-self-center">
                                    <h3 class="title-d">
                                        <a asp-controller="Host" asp-action="HostDetail" asp-route-MaChuNha="@item.MaChuNha" class="link-two">
                                            @item.TenChuNha
                                        </a>
                                    </h3>
                                </div>
                            </div>
                            <div class="card-body-d">
                                <p class="content-d color-text-a">
                                    @item.MoTaChuNha
                                </p>
                                <div class="info-agents color-a">
                                    <p>
                                        <strong>Số điện thoại: </strong> @item.SdtchuNha
                                    </p>
                                    <p>
                                        <strong>Email: </strong> @item.Email
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer-d">
                                <div class="socials-footer d-flex justify-content-center">
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a href="facebook.com" class="link-one">
                                                <i class="bi bi-facebook" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="twitter.com" class="link-one">
                                                <i class="bi bi-twitter" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="instagram.com" class="link-one">
                                                <i class="bi bi-instagram" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="linkerin.com" class="link-one">
                                                <i class="bi bi-linkedin" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-sm-12">
                <nav class="pagination-a">
                    <ul class="pagination justify-content-end">
                        @Html.PagedListPager(Model,page=>Url.Action("Index", new{page=page}))
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <!-- End Agents Grid-->
</section>


<style>
    .pagination li.active {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #2eca6a;
        border-color: #2eca6a;
        color: #ffffff;
        font-weight: bold;
    }

    .pagination li {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        background: #ffffff;
        border-color: #ffffff;
        color: #000000;
        font-weight: bold;
    }
</style>


