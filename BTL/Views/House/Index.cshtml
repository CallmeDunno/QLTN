
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHouse.cshtml";
}


@using BTL.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<ThongTinNha>
@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card-box-a card-shadow">
            <div class="img-box-a">
                <img src="@Url.Content("../Images/"+@item.AnhMinhHoa) " alt=" " class="img-a img-fluid">
            </div>
            <div class="card-overlay">
                <div class="card-overlay-a-content">
                    <div class="card-header-a">
                        <h2 class="card-title-a">
                            <a href="#">
                                @item.DienTich
                                <br> @item.DiaChiNha
                            </a>
                        </h2>
                    </div>
                    <div class="card-body-a">
                        <div class="price-box d-flex">
                            <span class="price-a">rent | @item.GiaPhong</span>
                        </div>
                        <a href="property-single.html" class="link-a">
                            Click here to view
                            <span class="bi bi-chevron-right"></span>
                        </a>
                    </div>
                    <div class="card-footer-a">
                        <ul class="card-info d-flex justify-content-around">
                          
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
   }
<nav class="pagination-a">
        @Html.PagedListPager(Model, page=>Url.Action("Index", new{page=page}))
</nav>

        

